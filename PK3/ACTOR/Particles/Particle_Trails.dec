ACTOR MT_DreckRauch : MT_PRT_TrailBase {
  //Var Int User_TTL
  Gravity 0.7
  BounceFactor 0.45
  Scale 2
  renderstyle Normal
  States {
 Spawn:
    TNT1 A 1 A_SetUserVar("User_TTL",1)	
    goto Loopy  
  Loopy:
     DRCK    A 2
    "####"   A 0 A_Spawnitemex("Smoke1")
    "####"   A 0 A_SetUserVar("User_TTL",User_TTL+1)
    "####"   A 0 A_JumpIf(User_TTL==15,"Death")
    loop
}}

ACTOR SparkyTrailGlow : Particle
{
  renderstyle Add
  alpha 1.5
  Scale 0.09
  reactiontime 8
  States
  {
  Spawn:
    APP1 A 1 Bright 
	{
	A_SetScale(ScaleX + 0.06, ScaleY + 0.06);
	A_FadeOut(0.214);
	A_CountDown;
	}
	loop
  Death:
    TNT1 A 1
    Stop
  }
}

