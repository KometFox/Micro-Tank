//All Shell/Shot Projectiles should use this
//as base
ACTOR MTP_TShellBase {
  Radius 7
  Height 7
  Speed 60
  DamageType AP
  Projectile
  scale 0.7
  -NOGRAVITY
  +BLOODSPLATTER
  +EXTREMEDEATH
 // +FORCEPAIN
  gravity 0.018
  damage (frandom(1,1.2)*100)
  DeathSound "Weapon/37mmblas"
  Obituary "%o <75mm AP] %k" 
  States {
  Spawn:
    37MM A 1 Bright A_Spawnitemex("ShellTrace")
	37MM A 0 Bright A_Spawnitemex("ShellTrace")
    Loop
  Death:
   TNT1 A 0 A_Spawnitem("37mmAP_ExplosionSpawner")
    TNT1 A 1  A_Explode(50,50)
    Stop
}}

