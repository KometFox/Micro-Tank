	TNT1 AAAAAA 0 A_Spawnitemex("MT_CEG_75mmHE_DreckRauch",0,0,0,frandom(10,20),frandom(10,20),frandom(15,27),random(45,360))
    TNT1 A  0  A_SpawnItemEx("MT_CEG_75mmHEShell_Glow",0,0,0,0+frandom(-1,1),0+frandom(-1,1),0+frandom(-1,1),0+frandom(-360,360))
    TNT1 A 0 A_Spawnitemex("Smoke1_S2",0,0,0,0+random(-2,2),0+random(-2,2),0+random(5,8))
