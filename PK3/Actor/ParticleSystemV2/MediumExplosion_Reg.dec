	TNT1 AAAAAAAA 0 A_Spawnitemex("MTCEG_MediumExplosion_HEShell-Xplo",0,0,0,frandom(2,4),frandom(2,3),frandom(2,4),random(-360,360))
	TNT1 AAAAAAA 0 A_Spawnitemex("MTCEG_MediumExplosion_HEShell-Spark",0,0,0,frandom(6,12),frandom(6,12),frandom(6,12),random(-360,360))
	TNT1 AAAAAAA 0 A_Spawnitemex("MTCEG_MediumExplosion_HEShell-Spark",0,0,0,frandom(6,12),frandom(6,12),frandom(6,12),random(-360,360))
