ACTOR MTCEG_MediumExplosion_HEShell-Spark : Spark1
{
   Scale 0.35
  States
  {
  Spawn:
    APP1 AAAAAAABC 1 Bright
    APP1 DEFG 2 Bright A_Fadeout(0.058)  
    Goto Death
  }
}

