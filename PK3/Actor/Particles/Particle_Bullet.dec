ACTOR Smoke1_Bullets : Particle
{
  renderstyle Translucent
  Scale 0.45
  alpha 1
  States
  {
  Spawn:
    TNT1 A 0 A_Jump(128,"Spawn1")
    TNT1 A 0 A_Jump(128,"Spawn2")
    loop
  Spawn1:
    ASP1 ABCDEFGHIJKLMNOPQRS 1  
    ASP1 TUVWXYZ 1 A_Fadeout(0.15) 
    Goto Death
  Spawn2:
    ASQ1 ABCDEFGHIJKLMNOPQRS 1  
    ASQ1 TUVWXYZ 1 A_Fadeout(0.15) 
    Goto Death       
  Death:
    TNT1 A 1
    Stop
  }
}

