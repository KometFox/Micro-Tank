ACTOR 792mmAP_ExplosionSpawner : Particle
{
  States
  {
  Spawn:
    TNT1 A 0
    Goto Death
  Death:
    TNT1 A  0  A_spawnitemex("Bullet_Spark",0,0,0,0+random(4,-4),0+random(4,-4),0+random(4,-4))
    TNT1 A  0  A_spawnitemex("Smoke1_Bullets",0,0,0,random(-1,1),random(-1,1),random(-1,1)) 
    TNT1 A 1
    Stop
  }
}

