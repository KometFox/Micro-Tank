ACTOR Regenator_HP : CustomInventory
{

-CountItem
+INVENTORY.UNDROPPABLE
+INVENTORY.HUBPOWER
+INVENTORY.AUTOACTIVATE
+INVENTORY.ALWAYSPICKUP 
 Scale 1.5
  Inventory.Amount 1
  Inventory.MaxAmount 9999999
States
{
 Spawn:
 WPNU A -1
 stop
 Use:
 TNT1 A 1 A_JumpIfInventory("MHTA1_Token",1, "MHTA1")
 TNT1 A 1 A_JumpIfInventory("MMTA1_Token",1, "MMTA1")
 TNT1 A 1 A_JumpIfInventory("MTA1_Token",1, "MTA1")
 stop
 MHTA1:
 TNT1 A 1
 TNT1 A 1 A_GiveInventory("MHTA1regen")
 goto idle
 MMTA1:
 TNT1 A 1
 TNT1 A 1 A_GiveInventory("MMTA1regen")
 goto idle
 MTA1:
 TNT1 A 1
 TNT1 A 1 A_GiveInventory("MTA1regen")
 goto idle
 Idle:
 TNT1 A 1
 stop
}
}



