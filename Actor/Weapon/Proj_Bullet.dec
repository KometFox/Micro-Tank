ACTOR MT_FastBulletBase : Fastprojectile
{
  Radius 6
  Height 6
  -NOGRAVITY
  +BLOODSPLATTER  
//Speed 90
  Speed 250
  Projectile
  DamageType BulletAP 
  damage (random(21,21)*1)
  Obituary "%o <7.62mm AP] %k" 
  gravity 0.0085
  scale 0.1
  renderstyle Add
  Alpha 1
  decal MT_Bullethit1
  States
  {
  Spawn:
    TRCR A 1 
    Loop
  Death:
    TNT1 A 1
    TNT1 A 0 A_SpawnItem("MT_BulletPuff") 
    TNT1 A 0 A_Playsound("BulHi")
    Stop
  Crash:
    TNT1 A 1
    TNT1 A 0 A_SpawnItem("MT_BulletPuff") 
    TNT1 A 0 A_Playsound("BulHi")
    Stop	
  XDeath:
    TNT1 A 0
    Stop
  }
}

