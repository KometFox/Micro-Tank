ACTOR MT_BuckShot : MT_Frag
{
  DamageType Buckshot
  Speed 45
  damage (random(1,1.2)*10)
  Gravity 0.07
  Obituary "%o <Buckshot] %k" 
  BounceType None
  BounceCount 0
  renderstyle Add
  decal MT_Bullethit1
  States{
    Spawn:
    FRAG A 1 
    Loop
  Death:
    TNT1 A 0 A_SpawnItem("MT_BuckshotPuff") 
    TNT1 A 0 A_Playsound("BulHi")
    TNT1 A 1
    Stop
  XDeath:
    TNT1 A 0
    Stop	
}}

