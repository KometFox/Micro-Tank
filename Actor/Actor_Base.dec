ACTOR MT_Dud
{
  Radius 6
  Height 6
  Speed 10
  DamageType AP
  Projectile
  scale 0.7
  -NOGRAVITY
  +BLOODSPLATTER
 // +FORCEPAIN
  gravity 0.018
  damage (random(1,1.2)*5)
+EXTREMEDEATH
  DeathSound ""
  Obituary "%o <dud] %k" 
  BounceType Doom
  BounceCount 2
  BounceFactor 0.45
  WallBounceFactor 2
  States
  
  {
  Spawn:
    IDLE A 1
    IDLE A 0 A_PlaySound("MetHit3")
    Goto Spawn2
  Spawn2:
    IDLE A 2
    TNT1 A 0 A_SpawnItem("Smoke1_S0.25")
    loop
  Death:
    TNT1 AAAA 0 A_Spawnitemex("Dirtchunk_S0.75",0,0,0,0+random(-4,4),0+random(4,4),0+frandom(4,8),0+random(-360,360))
    Stop
  }
}

