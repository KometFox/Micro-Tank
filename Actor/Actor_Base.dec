  +NOTELEOTHER
  +CANNOTPUSH
  +SHOOTABLE
  +SOLID
  +CANPASS
  +PUSHABLE
  +BLOCKEDBYSOLIDACTORS
  Radius 6
  Height 6
}


//All Shell/Shot Projectiles should use this
//as base
ACTOR MTP_TShellBase {
  Radius 6
  Height 6
  Speed 60
  DamageType AP
  Projectile
  scale 0.7
  -NOGRAVITY
  +BLOODSPLATTER
  +EXTREMEDEATH
 // +FORCEPAIN
  gravity 0.018
  damage (random(1,1.2)*100)
  DeathSound "Weapon/37mmblas"
  Obituary "%o <75mm AP] %k" 
  States {
  Spawn:
    37MM A 1 Bright A_Spawnitem("ShellTrace")
    Loop
  Death:
   TNT1 A 0 A_Spawnitem("75mmAP_ExplosionSpawner")
    TNT1 A 1  A_Explode(50,50)
    Stop
}}

ACTOR MTP_TShellBase_FastProj : FastProjectile {
  Radius 6
  Height 6
  Speed 60
  DamageType AP
  Projectile
  scale 0.7
  +NOGRAVITY
  +BLOODSPLATTER
 // +FORCEPAIN
  +EXTREMEDEATH
  gravity 0
  damage (random(1,1.2)*100)
  DeathSound "Weapon/37mmblas"
  Obituary "%o <75mm AP] %k" 
  States
  {
  Spawn:
    37MM A 1 Bright A_Spawnitem("ShellTrace")
    Loop
  Death:
   TNT1 A 0 A_Spawnitem("75mmAP_ExplosionSpawner")
    TNT1 A 1  A_Explode(50,50)
    Stop
}}

