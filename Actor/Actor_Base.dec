//Fancy graphics like impact,fog,smoke etc...
//should use this
Actor Particle 
{
  +NOBLOOD
  +DONTGIB
  +NOICEDEATH
  +ClientSideOnly
  +FORCEXYBILLBOARD
  +NOTELEPORT
  +NOTELEOTHER
  +CANNOTPUSH
  -RANDOMIZE
  -THRUACTORS
  -NOINTERACTION
  -ACTIVATEMCROSS  
  -SHOOTABLE
  Speed 2
   Gravity 0
//Anything bigger causes the effects to slide like a JIDF around
  Radius 7
  Height 7
 
  BounceType Grenade
  BounceCount 10
  BounceFactor 0.5 
 
}

Actor ParticleNB : Particle
{
  BounceCount 0
  BounceType None
}

Actor DestroyableActor 
{
  -SHOOTABLE
