Actor Item_GrenadePod_SSS : MT_PlayerInventory { 
  -COUNTITEM
  +INVENTORY.UNDROPPABLE  
 // Inventory.InterHubAmount 1
  Inventory.Icon "FGRSB0"
  Inventory.PickupMessage "Picked up: Supply Smoke Grenade (Pod mount)"
  Inventory.Amount 1
  Inventory.MaxAmount 2
  Inventory.InterHubAmount 2
  Tag "[Grenade Pod]: Supply Smoke Grenade"

  states
  {
  Spawn:
    N15S A -1
    stop
  Use:  
    N15S A 1 A_Jumpifinventory("MT_Grenade_SSS_Cooldown",1, "Nein")
    N15S A 0 A_GiveInventory("MT_Grenade_SSS_Cooldown")
    TNT1 A 0 A_Giveinventory("MT_Grenade_SSS_Cooldown_Showme",1)
    TNT1 A 1 A_GiveInventory("Item_GrenadePod_SSS",10)
    TNT1 A 0 A_Playsound("Fire04")
    TNT1 A 0 A_FireCustomMissile("MT_40mmSupplyMarker",0,0,-11)
    TNT1 AAAAA  0  A_spawnitemex("Smoke1_S0.25",0+frandom(0.5,-0.5),0+frandom(0.5,-0.5),-11+frandom(0.5,-0.5),0+frandom(-0.5,0.5),0+frandom(-0.5,0.5),0+frandom(-0.5,0.5),0+frandom(-360,360))
    loop
  Nein:
    TNT1 A 0
    goto Use
}}



ACTOR MT_40mmSupplyMarker
{
  Radius 6
  Height 6
  Speed 25
  DamageType Smoke
  Projectile
  -NOGRAVITY
  -BLOODSPLATTER
  +FORCEPAIN
  +NOTELEPORT
  gravity 0.75
   damage 0
   var int user_EffectDuration;  
  Deathsound "Smoke"
  Obituary "%o <40mm Smoke grenade] %k" 
  States
  {
  Spawn:
    MESH A 1 Bright A_Spawnitem("ShellTrace")
    Loop
  Death:
    MESH A 0 A_Scream
    MESH A 0 A_SetUserVar("user_EffectDuration",0)
    TNT1 A 0 A_Spawnitemex("SupplySignal",0,0,0,0,0,100)
	
    Goto Death2
  Death2:
    MESH AAA 0 A_Spawnitemex("SupplySmokeScreen",0,0,0,0,1,random(2,2))
//   TNT1 A 0 A_RadiusGive ("ItemS_BlindedSmoke", 160, RGF_Monsters, 1)
    MESH A 0 A_SetUserVar("user_EffectDuration",user_EffectDuration+1)
    MESH A 18 // 18 = 0,5~ sekunde, FD of 2 = 1 sekunde  
    MESH A 0 A_JumpIf(user_EffectDuration==20,"Death3")
    loop    
  Death3:
    MESH AAAAAAAAAAAAAAAA  5  A_Fadeout(0.0591)  
    TNT1 A 0
    stop
    
  }
}


