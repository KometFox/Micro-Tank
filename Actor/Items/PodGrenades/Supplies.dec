ACTOR MT_SupplyBox : SwitchableDecoration 
{

  Health 100
  Radius 15
  Height 30
  Mass 10000
  -NOGRAVITY 
  Gravity 0.95
	
   +SHOOTABLE
   +NOBLOOD
   -SOLID
   //+NOGRAVITY
   +CANPASS
   +CANNOTPUSH
   +PUSHABLE
   +USESPECIAL
  Damagefactor Crush,0
  Activation THINGSPEC_Switch
  Renderstyle Translucent
  var int user_Amount;
  Alpha 1
  States
  {
  Spawn:
    KIST A 1
    KIST A 1 
    KIST A 0 A_SetUserVar("user_Amount",1)
    Goto Spawn2
  Spawn2:
    KIST A 1 
    loop
  Active:
    TNT1 A 0 A_Jumpif(user_Amount == 0, "Empty")
    KIST A 0 A_spawnitem("MT_AP",1)
    KIST A 0 A_spawnitem("MT_HE",1)
	KIST AA 0 A_spawnitem("MTAmmo_Buckshot",1)
    KIST AAAAAAAAAAAA 0 A_spawnitem("A_7u62x54mmR",1)
    TNT1 A 0 A_SetUserVar("user_Amount",user_Amount-1)
    Goto Spawn2
  Inactive:
    TNT1 A 0 A_Jumpif(user_Amount == 0, "Empty")  
    KIST A 1
    Goto Spawn2
  Empty:
    KISE A 1 
    loop
  Death.Reclaim:
    TNT1 A 0 A_Playsound("Recla")
    KIST A 1 A_GiveToTarget("MT_Credits",50)
    TNT1 A 0 A_SpawnItemEx("Explosion1_S0.5")
    KIST AAAAA 1 A_Fadeout(0.12,1)
    Stop 
  Death:
    TNT1 AAA 0  A_spawnitemex("MT_Junk",0,0,0,0+random(8,-8),0+random(-8,8),0+random(5,8),0+random(-360,360))
    TNT1 A 0 A_Spawnitemex("50mmHE_ExplosionSpawner",0,0,0)
    TNT1 A 0 A_Playsound("boom3")
    TNT1 A 0 A_Explode(90,160)
    TNT1 AAAAAAAAAAA 0  A_spawnitemex("MT_Proj_SupplyBoxBomb",0,0,0,0+random(8,8),0+random(-8,8),0+random(3,8),0+random(-360,360))
    KIST AAAAA 4 A_Fadeout(0.22)
    Stop
  }
}


