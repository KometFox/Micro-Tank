ACTOR Upgrade_FAE_NapalmAdditive : Inventory
{
 Scale 1.5
  Inventory.Amount 1
  Inventory.MaxAmount 1
  Inventory.PickupMessage "Picked up: Napalm Additives for FAE"
States
{
 Spawn:
 FNPU A -1
 stop
}
}


ACTOR MTU_HEMortar1_P : CustomInventory
{
 Scale 1
 +INVENTORY.AUTOACTIVATE
  Inventory.Amount 1
  Inventory.MaxAmount 1
  Inventory.PickupMessage "HE Mortar Shell upgraded with Homing Guidance"
States
{
 Spawn:
 MOUP A -1
 stop
 Use:
 TNT1 A 0 A_TakeInventory("MT_MortarLock1",1)
 TNT1 A 1 A_GiveInventory("MTU_HEMortar1",1)
 Stop
}
}


